{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build [main]",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "clean"
      ],
      "windows": {
        "command": "ninja",
        "args": [
          "-f",
          "build.windows.ninja"
        ]
      },
      "linux": {
        "command": "ninja",
        "args": [
          "-f",
          "build.linux.ninja",
          "main"
        ]
      },
      "osx": {
        "command": "ninja",
        "args": [
          "-f",
          "build.osx.ninja",
          "main"
        ]
      }
    },
    {
      "label": "build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "build .s"
      ],
      "windows": {
        "command": "ninja",
        "args": [
          "-f",
          "build.windows.ninja"
        ]
      },
      "linux": {
        "command": "ninja",
        "args": [
          "-f",
          "build.linux.ninja"
        ]
      },
      "osx": {
        "command": "ninja",
        "args": [
          "-f",
          "build.osx.ninja"
        ]
      }
    },
    {
      "label": "build .s",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "clean"
      ],
      "windows": {
        "command": "ninja",
        "args": [
          "-f",
          "build.windows.ninja",
          ".s"
        ]
      },
      "linux": {
        "command": "ninja",
        "args": [
          "-f",
          "build.linux.ninja",
          ".s"
        ]
      },
      "osx": {
        "command": "ninja",
        "args": [
          "-f",
          "build.osx.ninja",
          ".s"
        ]
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "group": "build",
      "command": "ninja",
      "args": [
        "-t",
        "clean"
      ],
      "windows": {
        "command": "ninja",
        "args": [
          "-f",
          "build.windows.ninja",
          "-t",
          "clean"
        ]
      },
      "linux": {
        "command": "ninja",
        "args": [
          "-f",
          "build.linux.ninja",
          "-t",
          "clean"
        ]
      },
      "osx": {
        "command": "ninja",
        "args": [
          "-f",
          "build.osx.ninja",
          "-t",
          "clean"
        ]
      }
    }
  ]
}
